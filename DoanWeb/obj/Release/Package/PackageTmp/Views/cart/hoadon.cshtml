
@{
    Layout = "~/Views/share/layout.cshtml";
    DoanWeb.Models.data database = new DoanWeb.Models.data();
    string acc = Session["acc"] as string;
    
}
@using DoanWeb.Models
<!-- Header part end-->
<!--================Home Banner Area =================-->
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Order Confirmation</h2>
                        <p>Home <span>-</span> Order Confirmation</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!--================ confirmation part start =================-->
<section class="confirmation_part padding_top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="confirmation_tittle">
                    <span>Cảm ơn bạn đã đặt hàng.</span>
                </div>
            </div>
            @{ var order_main = database.Orders.Where(o => o.id_user == acc).FirstOrDefault();
                var diachi = database.User_role.Where(od => od.id_user == acc).FirstOrDefault();

                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>Thông tin đơn hàng</h4>
                        <ul>
                            <li>
                                <p>Số điện thoại</p><span>: @order_main.o_phone</span>
                            </li>
                            <li>
                                <p>Ngày đặt hàng</p><span>: @order_main.orderDateTime</span>
                            </li>

                            <li>
                                <p>Trạng thái đơn</p><span>: @order_main.orderStatus</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>shipping Address</h4>
                        <ul>
                            <li>
                                <p>Địa chỉ nhận hàng</p><span>: @diachi.address</span>
                            </li>

                        </ul>
                    </div>
                </div>
            }
        </div>
        @{

            var order = database.Orders.Where(o => o.id_user == acc).FirstOrDefault();
            var od_dt = database.OrderDetails.Where(od => od.orderID == order.orderID).ToList();
            int tong = 0;
            <div class="row">
                <div class="col-lg-12">
                    <div class="order_details_iner">
                        <h3>Order Details</h3>
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th scope="col" colspan="2">Product</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ foreach (var o in od_dt)
                                    {
                                        tong = tong + int.Parse(o.ordtsThanhTien);
                                        string tensp = database.Products.Where(p => p.proID == o.proID).Select(p => p.proName).FirstOrDefault();
                                        <tr>
                                            <th colspan="2"><span>@tensp</span></th>
                                            <th>x @o.ordtsQuantity</th>
                                            <th> <span>@o.ordtsThanhTien VNĐ</span></th>
                                        </tr>
                                    }

                                }


                                <tr>
                                    <th colspan="3">Subtotal</th>
                                    <th> <span>@tong VNĐ</span></th>
                                </tr>
                                <tr>
                                    <th colspan="3">shipping</th>
                                    <th><span>flat rate: $50.00</span></th>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th scope="col" colspan="3"></th>
                                    <th scope="col">Total</th>
                                </tr>
                                <tr>
                                    <th scope="col" colspan="3"></th>
                                    <th scope="col">@(tong + 50000) VNĐ</th>
                                </tr>

                            </tfoot>

                        </table>
                        <a class="btn_3" href="@Url.Action("Index", "Home")">
                            Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
            
        }
    </div>
</section>
<!--================ confirmation part end =================-->
<!--::footer_part start::-->
