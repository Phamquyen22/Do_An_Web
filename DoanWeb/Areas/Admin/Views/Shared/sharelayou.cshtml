                        <li class="dropdown">
                            <a href="#" class="nav-link has-dropdown"><i class="far fa-user"></i> <span>Auth</span></a>
                            <ul class="dropdown-menu">
                                @if (role == "admin")
                                {
                                <li><a href="/Admin/admin/account_management">Account management</a></li>}
                                <li><a href="/Admin/admin/add_account">Add account </a></li>
                            </ul>
                        </li>
                    </ul>

                </aside>
