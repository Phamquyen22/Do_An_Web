                            @{
                                if (acc != null)
                                {
                                    var a = database.User_role.Where(u => u.id_user == acc).FirstOrDefault();

                                    <img alt="image" src="~/public/img/user/@a.img" class="rounded-circle mr-1" >
                                    <div class="d-sm-none d-lg-inline-block">Hi, @a.name</div>
                                }
                            }
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">


                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("login","Admin")" class="dropdown-item has-icon text-danger">
                                <i class="fas fa-sign-out-alt"></i> Logout
