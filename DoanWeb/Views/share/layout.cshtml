                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="menu_icon"><i class="fas fa-bars"></i></span>
                        </button>

                        <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link " href="@Url.Action("product", "Shop")">
                                        Shop
                                    </a>

                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link" href="@Url.Action("contact", "Home")" id="navbarDropdown_3">
                                        Contact
                                    </a>

                                </li>
                                @{
                                    if (acc != null)
                                    {
                                        string ten = database.User_role.Where(u => u.id_user == acc).FirstOrDefault().name;
                                        <li class="nav-item dropdown">

                                            <a class="nav-link" href="#" id="navbarDropdown_3">
                                                @ten
                                            </a>

                                        </li>
                                        <li class="nav-item dropdown">

                                            <a class="nav-link" href="/Home/Login" id="navbarDropdown_3">
                                                Logout
                                            </a>

                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item dropdown">

                                            <a class="nav-link" href="/Home/Login" id="navbarDropdown_3">
                                                login
                                            </a>

                                        </li>}
                                }

                            </ul>
                        </div>
                        <div class="hearer_icon d-flex">
                            <a id="search_1" href="javascript:void(0)"><i class="ti-search"></i></a>
                            <a href=""><i class="ti-heart"></i></a>
                            <div class="dropdown cart">
                                <a class="dropdown-toggle" href="@Url.Action("cart","cart")" id="navbarDropdown3" role="button"
                                    aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-cart-plus"></i>
                                </a>
                                <div class="dropdown-menu badge-light" style="background-color:white;box-shadow:1px 1px 1px 1px" aria-labelledby="navbarDropdown">


                                    <div class="badge-light" style="">
                                        @if (Session["role"] != null)
                                        {
                                            
                                            if (acc != null)
                                            {
                                                var phienlamviec = database.Sessions.Where(p => p.id_user == acc);
                                                
                                                if (phienlamviec != null && phienlamviec.Any())
                                                {
                                                    
                                                    <table class="table ">
                                                        <tr>
                                                           <td>
                                                               Ảnh sản phẩm
                                                           </td>
                                                            <td>
                                                                Tên sản phẩm
                                                            </td>
                                                            <td>
                                                                Số lượng 
                                                            </td>
                                                            <td>
                                                                Giá sản phẩm 
                                                            </td>
                                                        </tr>
                                                        @foreach (var item in phienlamviec)
                                                        {
                                                            var sanpham = database.Products.FirstOrDefault(sp => sp.proID == item.ses);
                                                            if (sanpham != null)
                                                            {
                                                                <tr>
                                                                    <td style="min-width:100px;">
                                                                        <a class="nav-link" href="@Url.Action("detail", "Shop", new { proID = sanpham.proID })">
                                                                            <img src="~/public/img/product/product/@sanpham.proPhoto" style="" />
                                                                         </a>

                                                                    </td>
                                                                    <td style="min-width:100px;">
                                                                        <a class="nav-link" href="@Url.Action("detail", "Shop", new { proID = sanpham.proID })">
                                                                            @sanpham.proName
                                                                        </a>
                                                                    </td>
                                                                    <td>
                                                                        @item.soluong
                                                                    </td>
                                                                    <td style="min-width:100px;">
                                                                        <span>@sanpham.proPrice</span>
                                                                    </td>
                                                                    
                                                                </tr>

                                                            }
                                                        }
                                                    </table>
                                                }
                                                else
                                                {
                                                    <p style="color:white">Giỏ hàng trống hãy tiếp tục mua</p>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <a class="btn btn_1" href="/Home/Login" id="navbarDropdown_3">
                                                login
                                            </a>
                                        }
                                    </div>
                                </div>

                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        <div class="search_input" id="search_input_box">
            <div class="container ">


                <form class="d-flex justify-content-between search-inner" id="searchForm" action="@Url.Action("timkiem", "Shop")" method="post">
                    <input type="text" class="form-control" id="query" name="query" placeholder="Search Here">

                    <button type="submit" class="btn"></button>
                    <span class="ti-close" id="close_search" title="Close Search"></span>
                </form>

            </div>
        </div>
    </header>


    @RenderBody()

